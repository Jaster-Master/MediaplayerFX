   </content>
   <header>
      <HBox alignment="CENTER">
         <children>
            <Label fx:id="settingsLabel" maxHeight="30.0" minHeight="30.0" prefHeight="30.0" text="Einstellungen">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </header>
   <buttonTypes>
      <ButtonType fx:constant="CLOSE" />
   </buttonTypes>
</DialogPane>
